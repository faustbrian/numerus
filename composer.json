{
    "name": "cline/numerus",
    "description": "Immutable numeric value object with chainable arithmetic operations and Laravel Number formatting",
    "license": "MIT",
    "keywords": [
        "php",
        "number",
        "numeric",
        "immutable",
        "value-object",
        "arithmetic",
        "mathematics",
        "percentage",
        "formatting",
        "laravel",
        "intl",
        "i18n",
        "currency",
        "locale"
    ],
    "authors": [
        {
            "name": "Brian Faust",
            "email": "brian@cline.sh"
        }
    ],
    "require": {
        "php": "^8.5.0",
        "ext-intl": "*",
        "brick/math": "^0.14.1",
        "illuminate/support": "^12.0"
    },
    "require-dev": {
        "cline/coding-standard": "^1.5.6",
        "orchestra/testbench": "^10.8",
        "symfony/var-dumper": "^7.4.0"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Cline\\Numerus\\": "src"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true,
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "lint": "vendor/bin/ecs check --fix",
        "refactor": "rector",
        "test": [
            "@test:lint",
            "@test:type-coverage",
            "@test:unit",
            "@test:types",
            "@test:refactor"
        ],
        "test:lint": "vendor/bin/ecs check",
        "test:refactor": "rector --dry-run",
        "test:type-coverage": "pest --parallel --min=90 --type-coverage",
        "test:types": "phpstan",
        "test:unit": "pest --parallel --min=90 --coverage"
    }
}
